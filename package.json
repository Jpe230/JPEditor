    "@popperjs/core": "^2.10.2",
    "@react-spring/web": "^9.4.3",
    "array-move": "^4.0.0",
    "bootstrap": "^5.1.3",
    "core-js": "3",
    "custom-electron-titlebar": "^4.1.0",
    "font-awesome": "^4.7.0",
    "frameless-titlebar": "^2.1.4",
    "guess-programming-language": "^1.0.0",
    "md5": "^2.3.0",
    "monaco-editor": "0.30.1",
