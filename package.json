    "prettier": "^2.4.1",
    "webpack": "^4.42.1",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "electronWebpack": {
    "whiteListedModules": [
      "monaco-editor"
    ],
    "renderer": {
